@model FollowsViewModel

@{
    ViewData["Title"] = $"Followers (@{Model.UserName})";
}

@section Styles{
    <link rel="stylesheet" href="~/css/all_items.css" />
}

<div class="all-items-cont">
    <h1 class="for-follows">
        <span>@@@Model.UserName</span><br>
        Followers
    </h1>

    <div class="list-cont">

        @foreach (var user in Model.UserList)
        {
            <div class="user-item">
                <a href="@Url.Action("Profile", "User", new { Id = user.UserName })">
                    <span class="d-flex align-items-center">
                        <img src="~/content/images/@user.ProfilePic">
                        <span class="user-names">@user.FirstName @user.LastName</span>
                        <span class="user-handle">@@@user.UserName</span>
                    </span>
                </a>
            </div>
        }

    </div>
</div>
